
{% block body %}
    <h1>Liste des Livres</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Titre</td>
                <td>Description</td>
                <td>Prix</td>
                <td>Categorie</td>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td><a href="{{ asset('images/' ~ livre.image)}}"> {{ livre.image }}</a></td>
                <td>{{ livre.Titre }}</td>
                <td>{{ livre.Description }}</td>
                <td>{{ livre.Prix }}</td>
                <td>{{ livre.categorie.nom }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}">show</a>
                </td>
                <td>    
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('livre_new') }}">Create new</a>
{% endblock %}
